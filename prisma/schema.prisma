generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
}

enum UserRole {
  STUDENT
  ADMIN
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String   // âœ… REQUIRED for signup/login
  role      UserRole @default(STUDENT)
  bio       String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  projects  Project[]

  @@index([email])
}

model Project {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  createdAt   DateTime  @default(now())

  ownerId     Int
  owner       User      @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  tasks       Task[]

  @@index([ownerId])
}

model Task {
  id        Int        @id @default(autoincrement())
  title     String
  status    TaskStatus @default(PENDING)
  createdAt DateTime   @default(now())

  projectId Int
  project   Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([status])
}
