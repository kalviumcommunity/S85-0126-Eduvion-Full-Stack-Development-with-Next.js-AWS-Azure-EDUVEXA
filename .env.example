# Server-side variables (DO NOT expose to client)
DATABASE_URL=postgres://username:password@localhost:5432/dbname
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# AWS S3 Configuration for Secure File Uploads
# Get these from AWS IAM User credentials
AWS_ACCESS_KEY_ID="your-access-key-id"
AWS_SECRET_ACCESS_KEY="your-secret-access-key"
AWS_REGION="ap-south-1"
AWS_BUCKET_NAME="your-bucket-name"

# Redis (if using for session management)
REDIS_URL="redis://localhost:6379"

# Client-side variables (safe to expose)
NEXT_PUBLIC_API_BASE_URL=https://api.example.com
NEXT_PUBLIC_AWS_BUCKET_NAME="your-bucket-name"
